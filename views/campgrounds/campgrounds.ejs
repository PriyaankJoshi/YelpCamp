<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>These are some random images</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Enter a new Campground</a>
            </p>
        </div>
    </header>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% arr.forEach(function (arr) { %>
            <div class="col-md-3 col-sm-6">
                <div>
                    <div class="img-thumbnail">
                        <img src="<%= arr.image %>">
                        <div class="caption">
                            <h4><%= arr.name %></h4>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= arr._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>